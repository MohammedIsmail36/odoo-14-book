        <!-- Post Lines Action-->
        <record id="action_confirm_import" model="ir.actions.server">
            <field name="name">Post</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_digits_import"/>
            <field name="binding_model_id" ref="model_digits_import"/>
            <field name="state">code</field>
            <field name="code">records.post_lines()</field>
        </record>

        <!-- confirm_sales_order-->
        <record id="action_confirm_sales_order" model="ir.actions.server">
            <field name="name">Confirm Sales Order</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_digits_import"/>
            <field name="binding_model_id" ref="model_digits_import"/>
            <field name="state">code</field>
            <field name="code">records.confirm_sales_order()</field>
        </record>

        <!-- # set quantities to reservation and Validation -->
        <record id="action_set_quantities_validation" model="ir.actions.server">
            <field name="name">Set Quantities and Validation</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_digits_import"/>
            <field name="binding_model_id" ref="model_digits_import"/>
            <field name="state">code</field>
            <field name="code">records.set_quantities_validation()</field>
        </record>

        <!-- # create_invoices  -->
        <record id="action_create_invoices" model="ir.actions.server">
            <field name="name">Create Invoices</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_digits_import"/>
            <field name="binding_model_id" ref="model_digits_import"/>
            <field name="state">code</field>
            <field name="code">records.create_invoices()</field>
        </record>


        <record model="ir.actions.act_window" id="action_digits_import">
            <field name="name">Import Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">digits.import</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new supplier in your address book
                </p>
                <p>
                    Odoo helps you easily track all activities related to a supplier.
                </p>
            </field>
        </record>

        <menuitem name="XX Import XX" id="digits_import" web_icon="Digits_import_SO_PO_invoice_payment,static/description/icon.png"
