<!--                    <field name='imp_ref08'/>-->
<!--                    <field name='imp_ref09'/>-->
                    <field name='type'/>
<!--                    <field name='stage'/>-->
                    <field name='partial_payment'/>
                    <field name='writeoff_account'/>
<!--                    <field name='allow_payment'/>-->
                    <field name='invoiced'/>
                    <field name='cr_invoice_id'/>
                    <field name='cr_payment_id'/>
                    <field name='active'/>
                    <field name='force_create'/>

                </tree>
            </field>
        </record>


        <record id="account_move_view_form_inherit" model="ir.ui.view">
            <field name="name">account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
<!--                <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_subtotal']" position="after">-->
<!--                    <field name="multiple_payment_amount" invisible="1"/>-->
<!--                </xpath>-->
                <notebook position="inside">
                    <page string="Information" name="info">
                        <group>
                            <group>
                                <field name='imp_fob'/>
                                <field name='imp_ref1'/>
                                <field name='imp_ref2'/>
                                <field name='imp_ref3'/>
                                <field name='imp_ref4'/>
                            </group>
                            <group>
                                <field name='imp_ref5'/>
                                <field name='imp_ref6'/>
                                <field name='imp_ref7'/>
                                <field name='imp_ref8'/>
<!--                                <field name='imp_ref9'/>-->
                            </group>
                        </group>
                    </page>

                </notebook>
            </field>
